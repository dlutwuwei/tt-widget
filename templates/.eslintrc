{
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "jsBridge": true,
        "require": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "indent": [
            2,
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "no-unused-vars": 1,
        "no-console": 0,
        "block-spacing": 1,
        "brace-style": 1,
        "comma-dangle": 2,
        "comma-spacing": 2,
        "space-infix-ops": 2,
        "semi-spacing": 2,
        "space-before-blocks": 2,
        "no-return-assign": 1,
        "no-negated-condition": 0,
        "no-multi-spaces": 1,
        "no-trailing-spaces": 2
    }
}
